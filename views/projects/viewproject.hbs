  {{!-- Header --}}
    <div class="header bg-primary pb-6">
      <div class="container-fluid">
        <div class="header-body">
          <div class="row align-items-center py-4">
            <div class="col-lg-6 col-7">
              <h6 class="h2 text-white d-inline-block mb-0">Project</h6>
              <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                  <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                  <li class="breadcrumb-item"><a href="/projects">{{project.name}}</a></li>
                  <li class="breadcrumb-item active" aria-current="page">View</li>
                </ol>
              </nav>
            </div>
            <div class="col-lg-6 col-5 text-right">
              <a href="#" class="btn btn-sm btn-neutral">New</a>
              <a href="#" class="btn btn-sm btn-neutral">Filters</a>
            </div>
          </div>
        </div>
      </div>
    </div>
           <!-- Page content -->
    <div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0"> Project</h3>
                    <p class="text-sm mb-0">
                        Showing {{project.name}}.
                    </p>
                </div>
                <div class="container py-4">
                       {{#if success}}
                     <div class="alert alert-success alert-dismissible fade show" role="alert">
                <span class="alert-icon"><i class="ni ni-like-2"></i></span>
                <span class="alert-text"><strong>Success!</strong> {{success}}</span>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">Ã—</span>
                </button>
              </div>
              {{/if}}
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                               <label for="name" class="form-control-label" >Name</label>
                               <input value="{{project.name}}" required type="text" placeholder="Enter Project Name " class="form-control" name="name" id="name" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                             <div class="form-group">
                                <label for="language" class="form-control-label" >language</label>
                                   <input  value="{{project.language}}" required type="text" name="language" id="language" class="form-control" readonly>
                            </div>
                           
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="IDE" class="form-control-label" >IDE</label>
                                   <input  value="{{project.IDE}}" required type="text" name="IDE" id="IDE" class="form-control" readonly>
                            </div>
                        </div>
                    </div>
                     <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="type" class="form-control-label" >type</label>
                                   <input  value="{{project.type}}" required type="text" name="type" id="type" class="form-control" readonly>
                            </div>
                        
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="department" class="form-control-label" >Department</label>
                                   <input  value="{{project.department}}" required type="text" name="department" id="department" class="form-control" readonly>
                            </div>
                            
                        </div>
                    </div>
                     <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="semester" class="form-control-label" >Semester</label>
                                   <input  value="{{project.semester}}" required type="text" name="semester" id="semester" class="form-control" readonly>
                            </div>
                            
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="description" class="form-control-label" >Description</label>
                                   <input  value="{{project.description}}" required placeholder="Enter Description About Project" type="text" name="description" id="description" class="form-control" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                            <div class="form-group">
                                <label for="year" class="form-control-label" >Year</label>
                                   <input  value="{{project.year}}" required placeholder="Enter year of Project" type="text" name="description" id="description" class="form-control" readonly>
                            </div>
                        </div>
                        <div class="col-md-6" id="ownerNameDiv">
                            <div class="form-group">
                              <label for="year" class="form-control-label" >Proposed By</label>
                                   <input  type="text" name="_csrf" id="ownerName" value="{{project.ownerName}}" class="form-control" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                            <div class="form-group">
                                   <input  type="hidden" name="_csrf" value="{{csrfToken}}" class="form-control">
                            </div>
                        </div>
                    </div>
                    
                </div>

            


            </div>
        </div>
          <script>
            document.addEventListener('DOMContentLoaded', function() {
              if(document.getElementById('ownerName').value.length  ==  '0')
              {
                document.getElementById('ownerNameDiv').style.display="none";
              }
              else
              {
                //alert('ownerName isnt empty');
              }
            }, false);
          </script>
    </div>   
       {{> footer }}
    </div>