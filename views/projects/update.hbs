<!-- Breadcrumb -->
<nav class="hk-breadcrumb" aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-light bg-transparent">
        <li class="breadcrumb-item"><a href="#">Projects</a></li>
        <li class="breadcrumb-item"><a href="#">{{project.year}}</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{project.name}}</li>
    </ol>
</nav>
<!-- /Breadcrumb -->

<!-- Container -->
<div class="container-fluid">

    <!-- Title -->
    <div class="hk-pg-header">
        <div class="row w-100">
            <div class="col-md-6">
                <h4 class="text-capitalize hk-pg-title"><span class="pg-title-icon"><span class="feather-icon text-primary"><i
                        data-feather="edit"></i></span></span>Edit {{project.name}} Project</h4>
            </div>
            <div class="col-md-6 pr-0 text-md-right">
                {{#if adminLogin}}
                    <a class="btn btn-sm btn-primary" href="/projects">All Projects</a>
                    <a class="btn btn-sm btn-info" href="/admin/proposedProjects">Proposed</a>
                {{/if}}
            </div>
        </div>
    </div>
    <!-- /Title -->

    <!-- Row -->
    <div class="row">
        <div class="col-xl-12">
            <section class="hk-sec-wrapper">
                <h5 class="hk-sec-title text-capitalize">Edit {{project.name}} {{project.year}} Project Information</h5>
                <p class="mb-40">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Beatae dignissimos
                    perspiciatis sapiente sunt veniam. Dolorem dolorum ipsam praesentium, quis ratione velit. Asperiores
                    eaque eos laudantium modi! Nisi odio quasi totam.
                </p>
                <div class="row">
                    <div class="col-sm">
                        {{#if success}}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <span class="alert-icon"><i class="ni ni-like-2"></i></span>
                                <span class="alert-text"><strong>Success!</strong> {{success}}</span>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">Ã—</span>
                                </button>
                            </div>
                        {{/if}}
                        <form method="POST" action="/projects/update/{{project.id}}">
                            <input type="hidden" name="_csrf" value="{{csrfToken}}"
                                   class="form-control">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name" class="form-control-label">Name</label>
                                        <input value="{{project.name}}"  required type="text"
                                               placeholder="Enter Project Name"  name="name" class="form-control" id="name"  >
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="language" class="form-control-label">Language</label>
                                        <input value="{{project.language}}" required type="text"
                                              name="language" id="language" class="form-control"  >
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="IDE" class="form-control-label">Integrated Development Environment </label>
                                        <input name="IDE" value="{{project.IDE}}" required type="text" id="IDE"
                                               class="form-control"  >
                                    </div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="type" class="form-control-label">Type</label>
                                        <input name="type" value="{{project.type}}" required type="text"  id="type"
                                               class="form-control"  >
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="department" class="form-control-label">Department</label>
                                        <input name="department" value="{{project.department}}" required type="text"
                                               id="department" class="form-control"  >
                                    </div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="semester" class="form-control-label">Semester</label>
                                        <input name="semester" value="{{project.semester}}" required type="text"
                                               id="semester" class="form-control"  >
                                    </div>

                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="year" class="form-control-label" >Year</label>
                                        <input name="year"  value="{{project.year}}" required placeholder="Enter year of Project" type="text"  id="year" class="form-control"  >
                                    </div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="description" class="form-control-label">Description</label>
                                        <textarea name="description" required placeholder="Enter Description About Project"
                                                  rows="5"   id="description" class="form-control"  >{{project.description}}</textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-outline-orange">Save Changes</button>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <!-- /Row -->
</div>
<!-- /Container -->