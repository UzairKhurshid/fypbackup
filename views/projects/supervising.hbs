<!-- Breadcrumb -->
<nav class="hk-breadcrumb" aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-light bg-transparent">
        <li class="breadcrumb-item"><a href="#">Projects</a></li>
        <li class="breadcrumb-item active" aria-current="page">Supervising</li>
    </ol>
</nav>
<!-- /Breadcrumb -->

<!-- Container -->
<div class="container-fluid">

    <!-- Title -->
    <div class="hk-pg-header">
        <div class="row w-100">
            <div class="col-md-6">
                <h4 class="hk-pg-title text-capitalize"><span class="pg-title-icon"><span class="feather-icon text-primary"><i
                        data-feather="bookmark"></i></span></span>Under {{accountName}} Supervising</h4>
            </div>
            <div class="col-md-6 pr-0 text-md-right">
                {{#if adminLogin}}
                    <a class="btn btn-sm btn-primary" href="/projects">All Projects</a>
                    <a class="btn btn-sm btn-info" href="/admin/proposedProjects">Proposed</a>
                    <a class="btn btn-sm btn-success" href="/projects/create">Create New Project</a>
                {{/if}}
            </div>
        </div>
    </div>
    <!-- /Title -->

    <!-- Row -->
    <div class="row">
        <div class="col-xl-12">
            <section class="hk-sec-wrapper">
                <h5 class="hk-sec-title text-capitalize">Projects under {{accountName}} supervising</h5>
                <p class="mb-40">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Beatae dignissimos
                    perspiciatis sapiente sunt veniam. Dolorem dolorum ipsam praesentium, quis ratione velit. Asperiores
                    eaque eos laudantium modi! Nisi odio quasi totam.
                </p>
                <div class="row">
                    <div class="col-sm">
                        <div class="table-wrap">
                            {{#if success}}
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <span class="alert-icon"><i class="ni ni-like-2"></i></span>
                                    <span class="alert-text"><strong>Success!</strong> {{success}}</span>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">Ã—</span>
                                    </button>
                                </div>
                            {{/if}}
                            <table id="datable_1" class="table table-hover w-100 display pb-30">
                                <thead>
                                <tr>
                                    <th>Project Name</th>
                                    <th>Student Name</th>
                                    <th>Student Email</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#if obj}}
                                    {{#each obj}}
                                        <!-- <th class="text-center" colspan="6">Show All Proposed Projects Here.</th> -->
                                        <tr>
                                            <td>{{this.projectName}}</td>
                                            <td>{{this.requestedByName}}</td>
                                            <td>{{this.requestedByEmail}}</td>
                                            <td class="d-flex">
                                                <a class="btn mr-5 btn-sm btn-outline-info" href="/viewproject/{{this.projectID}}">View Project</a>
                                                <a class="btn mr-5 btn-sm btn-outline-blue" href="/FYPTasks/{{this.FYPID}}">View Progress</a>
                                                <a class="btn btn-xs btn-info"
                                                   href="/chat/{{this.id}}?projectName={{../projName}}">
                                                <span class="feather-icon text-white">
                                                    <i data-feather="message-square"></i>
                                                </span>
                                                </a>
                                            </td>
                                        </tr>
                                    {{/each}}
                                {{/if}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <!-- /Row -->
</div>
<!-- /Container -->